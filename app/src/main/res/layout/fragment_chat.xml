<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
            <Spinner
                android:id="@+id/allUsersSpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="#fff"
                android:text="ok"
                android:layout_below="@+id/fullActivityInfoTopBar"
                android:layout_alignParentStart="true" />



            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@android:color/transparent"
                android:dividerHeight="16dp"
                android:background="@drawable/round_corners_defused_blue"
                android:stackFromBottom="true"
                android:transcriptMode="alwaysScroll"
                android:layout_below="@+id/allUsersSpinner"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/inputArea" />

        <EditText
            android:id="@+id/inputArea"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/round_corners"
            android:gravity="top"
            android:padding="3dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/chatSendButton" />

        <TextView
            android:id="@+id/fullActivityInfoTopBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/secondRelativeLayout"
            android:background="@color/black"
            android:gravity="center"
            android:text="@string/choose_who_to_chat_with"
            android:textColor="#ffffff"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/chatSendButton"
            android:layout_width="60dp"
            android:src="@drawable/send"
            android:background="@drawable/round_corners_black"
            android:layout_height="wrap_content"
            android:text="Button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/inputArea" />

</RelativeLayout>