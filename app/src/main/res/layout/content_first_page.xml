<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_first_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gruppe43.idretts_app.application.activities.FirstPage"
    tools:showIn="@layout/activity_first_page"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="198dp">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:background="@color/firstPageBgColor"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/please_select_one_of_the_following_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/textView3" />

        <Button
            android:text="@string/i_m_a_coach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/coachBT"
            android:layout_marginTop="5dp"

            />

        <Button
            android:text="@string/i_m_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/playerBT" />

        <Button
            android:text="@string/i_m_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/familyBT" />
    </LinearLayout>

</RelativeLayout>
